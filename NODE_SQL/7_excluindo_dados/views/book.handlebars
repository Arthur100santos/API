<div class="book-page">
    <a href="/books">Voltar</a>
    <div class="container">
        <h1>{{book.title}}</h1>
        <p>Este livro tem {{book.nm_pages}} paginas</p>

        <div class="action">
            <a href="/books/edit/{{book.id}}">Edit</a>
            <form action="/books/remove/{{book.id}}" method="post">
                <input type="submit" value="Excluir">
            </form>
        </div>
    </div>
</div>